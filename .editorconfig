# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = tab
indent_size = 4

# YML doesn't like tabs.
[*.yml]
indent_style = space
indent_size = 4
